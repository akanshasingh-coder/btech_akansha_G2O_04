#include<stdio.h>
#include<math.h>
int main()
{
    float si,ci,roi,a,t,n,p;
    printf("enter the principal amount : \n");
    scanf ("%f" , &p);
    printf("enter the rate of interest : \n");
    scanf("%f", &roi);
    printf("enter the time period ; \n");
    scanf("%f", &t);
    printf("enter the number of times the interest is compounding: \n " );
    scanf("%f", &n);
    si = (p*roi*t)/100;
    ci = p*pow(1+roi/n,n*t);
    printf("the simple interest is %f \n" , si);
    printf("the compound interest is %f \n" , ci);
    return 0;
}
