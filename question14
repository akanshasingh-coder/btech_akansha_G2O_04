#include<stdio.h>
int main()
{
    int a,oddsum=0,evensum=0;
    printf("enter the number");
    scanf("%d",&a);
    for(int i=0; i<=a; i++){
        if (i%2==0){
            evensum=evensum+i;
        }
        else{
            oddsum=oddsum+i;
        }
    }
        printf("the sum of the even numbers is %d",evensum);
        printf("the sum of the odd numbers is %d",oddsum);
        return 0;
}
